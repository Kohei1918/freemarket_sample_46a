.container.new-item
  .new-item__header
    = link_to image_tag("logo.svg"), "/"
  .new-item__main
    .new-item__main__container
      .new-item__main__container__head
        %h2 商品の情報を入力
      = form_with model: Item.new, local: true , class: "new-item__main__container__form sell-form" do |f|
        .sell-form__image
          %h3
            出品画像
            %span 必須
          %p 最大10枚までアップロードできます
          = f.file_field :images , class: "sell-form__image__input"
          .sell-form__image__dropbox
            %h5 ドラッグアンドドロップ
            %h5 またはクリックしてファイルをアップロード
        .sell-form__summary
          %h5
            商品名
            %span 必須
          = f.text_field :name, class: "sell-form__summary__name", placeholder: "商品名（必須 40文字まで)"
          %h5.mt-40
            商品の説明
            %span 必須
          = f.text_area :comment, class: "sell-form__summary__comment" , rows: "5", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
        .sell-form__detail
          %h6 商品の詳細
          .sell-form__detail__select-box
            %h5
              カテゴリー
              %span 必須
            .sell-form__detail__select-box__wrap
              = f.select :category_id, @categories.map{|t| [t.name, t.id]}, prompt: "---"
              = fa_icon "angle-down"
            .sell-form__detail__select-box__wrap#sell-form-sub_category
              %select#item_sub_category_id{name: ""}
              = fa_icon "angle-down"
            .sell-form__detail__select-box__wrap#sell-form-sub_sub_category
              %select#item_sub_sub_category_id{name: ""}
              = fa_icon "angle-down"
            #sell-form-size
              %h5.mt-40
                サイズ
                %span 必須
              .sell-form__detail__select-box__wrap
                = f.select :category_id, ["---", "XXS以下", "XS(SS)", "S"], size: "1"
                = fa_icon "angle-down"
            #sell-form-brand
              %h5.mt-40
                ブランド
                %span.gray 任意
              .sell-form__detail__select-box__wrap
                = f.text_field :brand_id, placeholder: "例）シャネル"
                = fa_icon "angle-down"
            %h5.mt-40
              商品の状態
              %span 必須
            .sell-form__detail__select-box__wrap
              = f.select :condition, ["---", "新品、未使用", "未使用に近い", "目立った傷や汚れなし"], size: "1"
              = fa_icon "angle-down"
        .sell-form__shipping
          %h6
            配送について
            = link_to "?", "/", class: "question"
          .sell-form__shipping__select-box
            %h5
              配送料の負担
              %span 必須
            .sell-form__shipping__select-box__wrap
              = f.select :shipping_fee, ["---", "送料込み（出品者負担）", "着払い（購入者負担）"], size: "1"
              = fa_icon "angle-down"
            %h5.mt-40
              発送元の地域
              %span 必須
            .sell-form__shipping__select-box__wrap
              = f.select :region_id, ["---", "北海道", "青森"], size: "1"
              = fa_icon "angle-down"
            %h5.mt-40
              配送料の負担
              %span 必須
            .sell-form__shipping__select-box__wrap
              = f.select :days_to_ship, ["---", "1~2日で発送", "2~3日で発送", "4~7日で発送"], size: "1"
              = fa_icon "angle-down"
        .sell-form__price
          %h6
            販売価格(300〜9,999,999)
            = link_to "?", "/", class: "question"
          .sell-form__price__select-box
            .sell-form__price__select-box__price-wrap
              .sell-form__price__select-box__price-wrap__left
                %h5
                  価格
                  %span 必須
              .sell-form__price__select-box__price-wrap__right
                %p ¥
                = f.text_field :price, id: "price-field", placeholder: "例）300"
            .sell-form__price__select-box__charge-wrap
              .sell-form__price__select-box__charge-wrap__left
                %p 販売手数料(10%)
              .sell-form__price__select-box__charge-wrap__right
                %p#charge-field -
            .sell-form__price__select-box__profit-wrap
              .sell-form__price__select-box__profit-wrap__left
                %h3 販売利益
              .sell-form__price__select-box__profit-wrap__right
                %h3#profit-field -
        .sell-form__submit
          %p 禁止されている出品、行為を必ずご確認ください。
          %p またブランド品でシリアルナンバー等がある場合はご記載ください。偽ブランドの販売は犯罪であり処罰される可能性があります。
          %p また、出品をもちまして加盟店規約に同意したことになります。
          = f.submit "出品する", id: "sell-submit-button", class: "btn btn-large mt-40"
          = link_to "もどる", "/", class: "sell-form__submit__back btn btn-gray "
.new-item__footer
  %ul
    %li
      = link_to "プライバシーポリシー", "/"
    %li
      = link_to "メルカリ利用規約", "/"
    %li
      = link_to "特定商取引に関する表記", "/"
  = link_to image_tag("logo-gray.svg"), "/", class: "new-item__footer__logo"
  %p
    %small ©︎2019 Mercari
